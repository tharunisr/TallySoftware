    <div class="table-responsive">
        <table class="table table-bordered">
            <tr class="table-secondary text-center">
                <th>SI.No</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Administrative Id</th>
                <th>Remark</th>
                <th>Company Name</th>
                <th>Contact Person Name</th>
                <th>Customer Type</th>
            </tr>
            @if (Model.Count > 0)
            {
                int count = 1;
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(temp => i.Name)</td>
                        <td>@Html.DisplayFor(temp => i.PhoneNumber)</td>
                        <td>@Html.DisplayFor(temp => i.Address)</td>
                        <td>@Html.DisplayFor(temp => i.AdministrativeId)</td>
                        <td>@Html.DisplayFor(temp => i.Remark)</td>
                        <td>@Html.DisplayFor(temp => i.CompanyName)</td>
                        <td>@Html.DisplayFor(temp => i.ContactPersonName)</td>
                        <td>@Html.DisplayFor(temp => i.CustomerType)</td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-danger fw-bold">Customers Not Found</td>
                </tr>
            }
            
        </table>
        <div>
        <a class="btn btn-danger ms-1" href="/staff/admindashboard">back</a>
        </div>
    </div>
