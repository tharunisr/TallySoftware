@model List<TallySoftware.Entity.Staff>
@{
    ViewBag.Title = "Staff List";
    //Layout = "~/Views/Shared/LayoutPage1.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="my-3 text-center">
        <h2>Staffs</h2>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr class="table-secondary text-center">
                <th>SI.No</th>
                <th>Name</th>
                @if (ViewBag.usertype == "Admin")
                {
                    <th>Action</th>
                }
            </tr>
            @if (Model.Count > 0)
            {
                int count = 1;
                @foreach (var i in Model)
                {
                    <tr>
                        <td class="text-center">@count</td>
                        <td class="text-center">@Html.DisplayFor(temp => i.StaffName)</td>
                      
                        @if (ViewBag.usertype == "Admin")
                        {
                            <td class="text-center">

                                <i class="fa-solid fa-user-pen text-success fa-xl" onclick="location.href='@Url.Action("Editstaff", "staff", new { Id =i.StaffId })'">

                                </i>

                                <i class="fa-solid fa-trash text-danger fa-xl" onclick="location.href='@Url.Action("Deletestaff", "staff", new { Id =i.StaffId})'"></i>

                            </td>
                        }
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-danger fw-bold">Staff Not Found</td>
                </tr>
            }

        </table>
        <div>
            <a class="btn btn-danger ms-1" href="/staff/displaystaff">back</a>
        </div>
    </div>
    </body>
    </html>
