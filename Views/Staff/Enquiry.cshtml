
@model TallySoftware.DTO.EnquiryDTO
@{
    ViewData["Title"] = "Enquiry";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Enquiry</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
       <div class="row justify-content-center">
         <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center" style="color: #212529; font-family: 'Times New Roman'">Add Enquiry</h2>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="login">
                            @using (Html.BeginForm("Enquiry", "Staff", FormMethod.Post, new { id = "submitForm" }))
                            {
                                <p class="text-center text-danger">@ViewBag.LoginDataRequired</p>
                                <div class="mb-3">
                                        @Html.LabelFor(temp => temp.CustomerName)<span class="text-danger mx-1">*</span>
                                    @* @Html.TextBoxFor(temp => temp.CustomerName, new { @class = "form-control" }) *@
                                  @*   <select asp-for="CustomerName" class="form-control" /> *@
                                        @Html.DropDownListFor(temp => temp.CustomerName, new SelectList(ViewBag.CustomerNameList), "Please Select", new { @class = "form-control" })
                                      
                                    @Html.ValidationMessageFor(temp => temp.CustomerName)
                                </div>
                                <div class="mb-3">
                                        @Html.LabelFor(temp => temp.RecruitmentName)<span class="text-danger mx-1">*</span>
                                    @Html.TextBoxFor(temp => temp.RecruitmentName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(temp => temp.RecruitmentName)
                                </div>
                                <div class="mb-3">
                                        @Html.LabelFor(temp => temp.Status)<span class="text-danger mx-1">*</span>
                                        @Html.TextBoxFor(temp => temp.Status, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(temp => temp.Status)
                                </div>
                                <div class="mb-3">
                                        @Html.LabelFor(temp => temp.Remark)<span class="text-danger mx-1">*</span>
                                        @Html.TextBoxFor(temp => temp.Remark, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(temp => temp.Remark)
                                </div>
                                <div class="mb-3">
                                        @Html.LabelFor(temp => temp.Schedule)<span class="text-danger mx-1">*</span>
                                        @Html.TextBoxFor(temp => temp.Schedule, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(temp => temp.Schedule)
                                </div>
                                    <div class="mb-3">
                                        @Html.LabelFor(temp => temp.Payment)<span class="text-danger mx-1">*</span>
                                        @Html.TextBoxFor(temp => temp.Payment, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(temp => temp.Payment)
                                    </div>
                                <button type="submit" class="btn btn-primary">Submit</button>  
                            }
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
    </div>
</body>
</html>































